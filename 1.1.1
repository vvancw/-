import matplotlib.pyplot as plt
import numpy as np

# 生成数据
x = np.linspace(0, 10, 100)  # 从0到10生成100个点
y = np.sin(x)  # 计算每个点的正弦值

# 创建图形
plt.figure(figsize=(10, 5))

# 绘制曲线
plt.plot(x, y, label='sin(x)', color='blue')

# 添加标题和标签
plt.title('正弦函数图')
plt.xlabel('x 值')
plt.ylabel('y 值')

# 添加网格
plt.grid(True)

# 添加图例
plt.legend()

# 显示图形
plt.show()
